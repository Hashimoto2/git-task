<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
    	            <th>name</th>
    	            <th><%= @user.name %> </th>
                </tr>
                <tr>
    	            <th>introduction</th>
    	            <th><%= @user.introduction %></th>
                </tr>
              </tbody>
            </table>
            <div class="edit">
              <%= link_to " ", edit_user_path(@user), class:"btn btn-primary col-xs-12 glyphicon glyphicon-wrench" %>
            </div><br><br>

            <h2>New book</h2>
              <% if @book.errors.any? %>
                <div id="error_explanation">
                  <h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
                    <ul>
                      <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                </div>
              <% end %>
          <diV>
            <%= form_with( model:@book, local:true) do |f| %>
              <h4 class="title1">Title</h4>
                <div><%= f.text_field :title, class: "title12"%></div>
                  <h4 class="opinion1">Opinion</h4>
                    <div><%= f.text_area :body, class: "opinion12" %></div>
                      <%= f.submit 'Create Book',class: "box2" %>
            <% end %>
          </diV>
      </div>
        <div class="col-xs-9">
          <table class="table">
            <thead>
              <h2>Users</h2>
              <tr>
                <th>image</th>
                <th>name</th>
                <th colspan="3"></th>
              </tr>
            </thead>
                <% @users.each do |user| %>
                <tr>
                  <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
                <% end %>
          </table>
        </div>
    </div>
  </div>
</div>
