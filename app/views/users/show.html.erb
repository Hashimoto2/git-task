<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
    	            <th>name</th>
    	            <th><%= @user.name %></th>
                </tr>
                <tr>
    	            <th>introduction</th>
    	            <th></th>
                </tr>
              </tbody>
            </table>
              <div class="row">
                <%= link_to " ", edit_user_path(@user), class:"btn btn-primary col-xs-12 glyphicon glyphicon-wrench" %>
              </div>

                  <h2 >New book</h2>
                  <%= form_with(model: @book, local: true) do |f| %>
                  <% if @book.errors.any? %>
                  <div class="notifications">
                    <div class="notice"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
                  </div>
                    <div class="alert alert-warning">
                      <ul>
                        <% @book.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                      </ul>
                    </div>
                  <% end %>
                      <h4 class="title1">Title</h4>
                      <%= f.text_field :title, class: "title11"%>
                      <h4 class="opinion1">Opinion</h4>
                      <%= f.text_area :opinion, class: "opinion11" %>
                      <%= f.submit 'Create Book',class: "box1" %>
                  <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %></td>
              <td><%= book.title %></td>
              <td><%= book.opinion %></td>
            </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>

