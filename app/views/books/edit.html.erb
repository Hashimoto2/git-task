<h1 class=heading>Editing Book</h1>
<%= form_with(model: @book, local: true) do |f| %>
<% if @book.errors.any? %>
<div class="notifications">
  <div class="notice"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
</div>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
</div>
<div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
</div>
<div class="actions">
  <%= f.submit 'Update Book' %>
</div>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>
<% end %>