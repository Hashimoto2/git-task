      <h1>Books</h1>

        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Body</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tr>
          <% @books.each do |book| %>
          　<tbody>
          　   <td><%= book.title %></td>
